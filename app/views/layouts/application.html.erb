<!DOCTYPE html>
<html>
  <head>
    <title>GEP.MONSTER </title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta property="og:image" content="1.png
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <meta name="description" content="<% if @meta_description.present? %><%=@meta_description %><% else %><%= meta_description %><% end %>">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-5Y9BZL1H1F"></script>
      <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-5Y9BZL1H1F');
    </script>
    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<% if @meta_title.present? %><%=@meta_title %><% else %><%= meta_title %><% end %>" />
    <meta property="og:type" content="game.translate" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_image %>" />
    <meta property="og:description" content="<% if @meta_description.present? %><%=@meta_description %><% else %><%= meta_description %><% end %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />

    </head>
  <body>
    <%= render 'shared/menu' %>
    <%= yield  %>
    <%= render 'shared/footer' %>
  </body>
   <script>

      navbar = document.querySelector('.navbar');
      navbar.querySelector('.toggle').addEventListener('click',()=>
      {
	    navbar.classList.toggle('collapsed')
      })
      window.addEventListener('scroll',(e)=>{
	    let windowY = window.pageYOffset
	    let navbarHeight = document.querySelector('.navbar').offsetHeight
	    if(windowY>navbarHeight) navbar.classList.add('sticky')
	    else navbar.classList.remove('sticky')
      })  
   </script>
</html>
